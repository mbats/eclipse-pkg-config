<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="org.eclipse.cdt.managedbuilder.pkgconfig.buildDefinitions"
         point="org.eclipse.cdt.managedbuilder.core.buildDefinitions">
   </extension>

   <extension
         id="org.eclipse.cdt.managedbuilder.pkgconfig.builder.PkgConfigBuilder"
         name="Pkg-config builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.eclipse.cdt.managedbuilder.pkgconfig.builder.PkgConfigBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="PkgConfigNature"
         name="Pkg-config nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.cdt.managedbuilder.pkgconfig.nature.PkgConfigNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.cdt.managedbuilder.pkgconfig.builder.PkgConfigBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml">
      </toc>
      <toc
            file="testToc.xml"
            primary="true">
      </toc>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
               <initializer
            class="org.eclipse.cdt.managedbuilder.pkgconfig.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
         	<page
            	class="org.eclipse.cdt.managedbuilder.pkgconfig.preferences.PreferencePage"
            	id="org.eclipse.cdt.managedbuilder.pkgconfig.preferences.PreferencePage"
            	name="%PrefPage.name">
      		</page>
   </extension>
   <extension
         point="org.eclipse.cdt.core.templateAssociations">
      <template
            id="org.eclipse.cdt.build.core.templates.EmptyProject">
      </template>
      <template
            id="org.eclipse.cdt.build.core.templates.HelloWorldCAnsiProject">
      </template>
      <template
            id="org.eclipse.cdt.build.core.templates.HelloWorldCCProject">
      </template>
   </extension>
   <extension
         point="org.eclipse.cdt.ui.cPropertyTab">
      <tab
            class="org.eclipse.cdt.managedbuilder.pkgconfig.properties.PkgConfigPropertyTab"
            name="Pkg-config"
            parent="org.eclipse.cdt.managedbuilder.ui.properties.Page_BuildSettings"
            weight="080">
      </tab>
   </extension>

</plugin>
